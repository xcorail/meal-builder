{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["esnext", "es2016", "es2017"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
